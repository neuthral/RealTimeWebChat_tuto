doctype html
html
    head
        title= "Real time web chat"
        script(src='/socket.io/socket.io.js')
        script(src='/chat.js')
    body(style='background:#2F1D04; color:#E5E510; font-family: monospace;')
        #container.col
            div#spinner
            #content(style='width: 100%; height: 300px; margin: 0 0 20px 0; border: solid 0px #999; overflow-y: hidden; background: #2F1D04')
            .controls
                input#name(style='color:#8E7C4B; background:#573F1F; height:32px; width:100%; border:2px solid #000', placeholder='username')
                br
                input#field(style='color:#8E7C4B; background:#573F1F; height:32px; width:100%; border:2px solid #000', placeholder='message')
                br
                input#send(style='color:#8E7C4B; background:#6B5238; height:32px; height:64px; width:100%; border:2px solid #000', type='button', value='send')